---
# Default configuration for zapz development environment
# This is an example configuration showing all available options
# Copy this file to default.yml and customize to your needs

# Git configuration
git:
  user:
    name: "Your Name"
    email: "your.email@example.com"
  editor: "code --wait"
  default_branch: "main"
  # Additional git settings
  config:
    core.autocrlf: "input"
    pull.rebase: "true"

# Node.js configuration
node:
  versions:
    - "lts/iron"      # Node.js 20 (Latest LTS)
    - "lts/hydrogen"  # Node.js 18
  default: "lts/iron"
  global_packages:
    - "pnpm"
    - "typescript"
    - "ts-node"
    - "nodemon"
    - "@types/node"

# Homebrew packages
homebrew:
  taps:
    - "homebrew/cask"
    - "homebrew/cask-fonts"
  formulas:
    - "git"
    - "gh"
    - "tree"          # Directory visualization
    - "jq"           # JSON processor
    - "wget"         # File downloader
    - "ripgrep"      # Fast search tool
    - "fd"           # Fast find alternative
  casks:
    - "arc"          # Modern browser
    - "figma"        # Design tool
    - "cursor"       # AI-powered code editor
    - "slack"        # Team communication
    - "spotify"      # Music
    - "visual-studio-code"
    - "sourcetree"   # Git GUI
    - "warp"         # Modern terminal
    - "1password"    # Password manager

# System preferences
macos:
  dock:
    autohide: true           # Auto-hide the dock
    magnification: true      # Enable dock magnification
    minimize-to-application: true
  keyboard:
    key_repeat: 2            # Fast key repeat
    initial_key_repeat: 15   # Short delay before repeat
  finder:
    show_hidden_files: true
    show_path_bar: true

# Cron configuration
cron:
  backup_time: "00 00 * * *"  # Daily at midnight
  notification_email: "your.email@example.com"
  update_schedule:
    enabled: true
    frequency: "daily"    # Options: daily, weekly, monthly
    time: "00:00"        # 24-hour format
    days: ["Sunday"]     # For weekly/monthly: which days to run
  terminal_update:
    enabled: true        # Check for updates when opening terminal
    frequency: 86400     # Minimum seconds between checks (24h)

# CLI configuration
cli:
  alias: "zapz"         # Command alias
  auto_alias: true      # Automatically add alias to shell config
  update_notifications: true  # Show update notifications

# Development tools configuration
vscode:
  extensions:
    - "dbaeumer.vscode-eslint"
    - "esbenp.prettier-vscode"
    - "github.copilot"
  settings:
    "editor.formatOnSave": true
    "editor.defaultFormatter": "esbenp.prettier-vscode"